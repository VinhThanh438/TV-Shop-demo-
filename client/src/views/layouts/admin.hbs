<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="shortcut icon" href="/imgs/TV-Shop-logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/fonts/fontawesome-free-6.4.0-web/fontawesome-free-6.4.0-web/css/all.min.css">
    <link rel="stylesheet" href="/fonts/themify-icons-font (1)/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <div id="admin-main">
        <header class="header admin-header">
            <div class="header-bar">
                <i class="fa-solid fa-bars"></i>
            </div>

            <div class="log-out">
                <a href="/" style="color: white;"><i class="fa-solid fa-arrow-right-from-bracket"></i></a>
            </div>
        </header>

        <div id="menu">
            <div class="admin-infor text-center">
                <img src="https://i.pinimg.com/564x/40/98/2a/40982a8167f0a53dedce3731178f2ef5.jpg" alt="Avatar" class="rounded-circle" width="100px">
                <h5 class="text-white">Vũ Thành Vinh</h5>
            </div>
            <ul class="menu-list">
                <li>
                    <a href="" class="btn btn-primary menu-list--btn btn-click">
                        <i class="fa-solid fa-tag"></i>Quản lý sản phẩm
                    </a>
                </li>
                <li>
                    <a href="" class="btn btn-primary menu-list--btn">
                        <i class="fa-solid fa-clipboard-check"></i>Quản lý đơn hàng
                    </a>
                </li>
                <li>
                    <a href="" class="btn btn-primary menu-list--btn">
                        <i class="fa-solid fa-address-book"></i>Quản lý khách hàng
                    </a>
                </li>
                <li class="">
                    <a href="" class="btn btn-primary menu-list--btn">
                        <i class="fa-solid fa-chart-simple"></i>Báo cáo doanh thu
                    </a>
                </li>
            </ul>
        </div>
        
        <div id="container">
            {{{body}}}
        </div>
    </div>

    <script>
        const $ = (selector) => document.querySelector(selector);
        const $$ = (selector) => document.querySelectorAll(selector);
        const iconBar = $('.fa-bars')
        const menu = $('#menu')
        const listBtn = $$('.menu-list--btn')
        const container = $('#container')

        iconBar.addEventListener('mouseenter', (e) => {
            menu.classList.remove('slide-out')
            container.classList.remove('container-out')
            container.classList.add('container-in')
            menu.classList.add('slide-in')
        })
        menu.addEventListener('mouseleave', (e) => {
            menu.classList.remove('slide-in')
            container.classList.remove('container-in')
            container.classList.add('container-out')
            menu.classList.add('slide-out')
        })

        listBtn.forEach((element) => {
            element.addEventListener('click', (e) => {
                listBtn.forEach((eSub) => {
                    eSub.classList.remove('btn-click')
                })
                element.classList.add('btn-click')
            })
        })
    </script>

    <script>
        const formatMoney = () => {
            const vndElements = document.getElementsByClassName("price");
            for (let i = 0; i < vndElements.length; i++) {
                const number = parseInt(vndElements[i].innerText);
                const formattedNumber = number.toLocaleString("vi-VN") + 'đ';
                vndElements[i].innerText = formattedNumber;
            }
        }

        formatMoney()
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
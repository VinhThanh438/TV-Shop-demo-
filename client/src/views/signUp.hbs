<style>
.form-control {
	border-color: #eee;
	min-height: 41px;
	box-shadow: none !important;
}
.form-control:focus {
	border-color: orangered;
}
.form-control, .btn {        
	border-radius: 3px;
}
.signup-form {
	width: 500px;
	margin: 0 auto;
	padding: 30px 0;
  margin-bottom: -60px;
}
.signup-form h2 {
	color: #333;
	margin: 0 0 30px 0;
	display: inline-block;
	padding: 0 30px 10px 0;
	border-bottom: 3px solid orangered;
}
.signup-form form {
	color: #999;
	border-radius: 3px;
	margin-bottom: 15px;
	background: #fff;
	box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
	padding: 30px;
  margin-top: 70px;
}
.signup-form .form-group row {
	margin-bottom: 20px;
}
.signup-form label {
	font-weight: normal;
	font-size: 14px;
	line-height: 2;
}
.signup-form input[type="checkbox"] {
	position: relative;
	top: 1px;
}
.signup-form .btn {        
	font-size: 16px;
	font-weight: bold;
	background: orangered;
	border: none;
	margin-top: 20px;
	min-width: 140px;
}
.signup-form .btn:hover, .signup-form .btn:focus {
	background: orangered;
	outline: none !important;
}
.signup-form a {
	color: orangered;
	text-decoration: underline;
}
.signup-form a:hover {
	text-decoration: none;
}
.signup-form form a {
	color: orangered;
	text-decoration: none;
}	
.signup-form form a:hover {
	text-decoration: underline;
}
</style>

<div class="signup-form">
    <form action="/user/signup" method="post" class="form-horizontal" onsubmit="return checkPassword()">
      	<div class="row">
        	<div class="col-8 offset-4">
				<h2>Đăng ký</h2>
			</div>	
      	</div>			
        <div class="form-group row">
			<label class="col-form-label col-4">Tên đăng nhập</label>
			<div class="col-8">
                <input type="text" class="form-control" name="username" required="required">
            </div>        	
        </div>
		<div class="form-group row">
			<label class="col-form-label col-4">Địa chỉ email</label>
			<div class="col-8">
                <input type="email" class="form-control" name="email" required="required">
            </div>        	
        </div>
    <div class="form-group row">
			<label class="col-form-label col-4">Số điện thoại</label>
			<div class="col-8">
                <input type="number" class="form-control" name="sdt" required="required">
            </div>        	
        </div>
		<div class="form-group row">
			<label class="col-form-label col-4">Mật khẩu</label>
			<div class="col-8">
                <input type="password" class="form-control password" name="password" required="required">
            </div>        	
        </div>
		<div class="form-group row">
			<label class="col-form-label col-4">Nhập lại mật khẩu</label>
			<div class="col-8">
                <input type="password" class="form-control confirm-password" name="confirm_password" 
                required="required">
            </div>        	
        </div>
		<div class="form-group row">
			<div class="col-8 offset-4">
				<p><label class="form-check-label"><input type="checkbox" required="required"> Tôi đồng ý với các 
        <a href="#">Điều khoản</a> &amp; <a href="#">Privacy Policy</a>.</label></p>
				<button type="submit" class="btn btn-primary btn-lg">Đăng ký</button>
			</div>  
		</div>		      
    </form>
	<div class="text-center">Bạn đã có tài khoản? <a style="color: orangered;">Đăng nhập tại đây</a></div>
</div>

<script>
  const checkPassword = () => {
    let confirmPassword = document.querySelector('.confirm-password')
    let password = document.querySelector('.password')
    if (confirmPassword.value !== password.value) {
      confirmPassword.style.border = '1px solid red'
      return false
    } else {
      confirmPassword.style.border = '1px solid #ced4da'
      return true
    }
  }
</script>